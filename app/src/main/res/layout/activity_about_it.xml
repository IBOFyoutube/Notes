<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".About_it"
    android:background="@color/black_shade_1"
    android:backgroundTint="@color/black_shade_1">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginTop="8dp"
    android:padding="5dp"
    android:id="@+id/lytabout"

    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/app_name"
        android:textSize="20dp"
        android:padding="5dp"
        android:id="@+id/txttopic"
        android:textStyle="bold"
        />

</LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:id="@+id/scrollview"
        app:layout_constraintTop_toBottomOf="@id/lytabout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="5dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Notes app xaqida malumotlar jamlangan qator . Ko'proq malumot uchun Telegram : @mchlink"
            android:textSize="20dp"
            android:padding="5dp"
            android:fontFamily="sans-serif-medium"
            android:id="@+id/txtmatn"
            />
    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>