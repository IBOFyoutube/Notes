<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/black_shade_2"
    app:cardElevation="4dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/idTvNoteTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:text="No Title"
            android:textColor="@color/white"
            android:layout_toLeftOf="@+id/lytbir"
            android:textSize="18dp"

            />

        <TextView
            android:id="@+id/idTvTimeStamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:text="TimeStamp"
            android:layout_toLeftOf="@+id/lytbir"
            android:layout_below="@+id/idTvNoteTitle"
            android:textColor="@color/white"

            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lytbir"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/idTvEdit"
                android:src="@drawable/ic_edit"
                android:layout_margin="5dp"
                android:padding="4dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/idTvDelete"
                android:src="@drawable/ic_delete"
                android:layout_margin="5dp"
                android:padding="4dp"
                />

        </LinearLayout>

    </RelativeLayout>




</androidx.cardview.widget.CardView>